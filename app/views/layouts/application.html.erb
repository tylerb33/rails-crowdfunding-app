<!DOCTYPE html>
<html>
  <head>
    <title>Crowdfundingapp</title>
    <%= csrf_meta_tags %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css' %>

  </head>

  <body>
    <% if logged_in? %>
             	<nav class="navbar navbar-expand-lg navbar-light bg-light">
                  <%= link_to "Crowdfunder", projects_path, class: "navbar-brand" %>
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><%= link_to "Home", projects_path, class: "nav-link" %></li>
                    </ul>

                  </div>
                  <div class="collapse navbar-collapse" id="navbarNav">
           
                  <%= form_tag(projects_path, :method => :get) do %>
                    <%= text_field_tag :term, nil, 
                    {:placeholder => "Search All Projects"} %>
                  <% end %>
              
                      <ul class="navbar-nav ml-auto">
                          <li class="nav-item align-self-end"><%= link_to "My Account", users_path, class: "nav-link" %></li>
                          <li class="nav-item align-self-end"><%= link_to "Log Out", logout_path, class: "nav-link" %></li>
                      </ul>
                  </div>
                </nav>

      <% else %>
                <%= link_to 'Login', login_path, class: "" %>
                <%= link_to 'Sign Up', signup_path %>

      <% end %>


    <div class="container">

            <%= yield %>
    </div>


  </body>
</html>
