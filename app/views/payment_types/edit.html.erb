<h1>Edit Payment Type</h1>

<%= form_for @payment_type do |f| %>
  <% if @payment_type.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @payment_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :account_number %><br />
    <%= f.text_field :account_number %>
  </div>
  
  <div class="actions"><%= f.submit "Submit Edit" %></div>
<% end %>